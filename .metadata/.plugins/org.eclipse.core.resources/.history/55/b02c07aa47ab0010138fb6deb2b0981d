            <label>Mật khẩu:</label>
            <input type="password" name="password" required/>
        </div>
        <div class="form-group">
            <label>Họ và tên:</label>
            <input type="text" name="fullname" required/>
        </div>
        <div class="form-group">
            <label>Ngày sinh:</label>
            <input type="date" name="birthday"/>
        </div>
