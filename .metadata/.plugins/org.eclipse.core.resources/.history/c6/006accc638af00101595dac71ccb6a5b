                <h3>Thêm mới / Cập nhật Danh mục</h3>
                <form id="catForm" action="AdminCategoryServlet" method="post">
                    <input type="hidden" name="action" id="formAction" value="add"/>
                    
                    <div class="form-group">
                        <label for="id">Mã Danh mục</label>
                        <input type="text" id="id" name="id" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Tên Danh mục</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    
                    <button type="submit" class="btn">Lưu thay đổi</button>
                    <button type="button" class="btn" onclick="resetForm()" style="background:var(--muted);">Hủy</button>
                </form>
