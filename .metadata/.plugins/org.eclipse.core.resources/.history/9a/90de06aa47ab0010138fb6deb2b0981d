            <input type="text" name="id" required/>
        </div>
        <div class="form-group">
            <label>Tiêu đề:</label>
            <input type="text" name="title" required/>
        </div>
        <div class="form-group">
            <label>Nội dung:</label>
            <textarea name="content" rows="3" required></textarea>
        </div>
        <div class="form-group">
            <label>Ảnh/Video (URL):</label>
            <input type="text" name="image"/>
        </div>
        <div class="form-group">
            <label>Ngày đăng:</label>
            <input type="date" name="postedDate" required/>
        </div>
        <div class="form-group">
            <label>Tác giả (mã phóng viên):</label>
            <input type="text" name="author" required/>
        </div>
        <div class="form-group">
            <label>Lượt xem:</label>
            <input type="number" name="viewCount" value="0"/>
        </div>
        <div class="form-group">
            <label>Loại tin:</label>
            <select name="categoryId" required>
                <c:forEach var="cat" items="${categoryList}">
                    <option value="${cat.id}">${cat.name}</option>
                </c:forEach>
            </select>
        </div>
        <div class="form-group">
            <label>Trang nhất:</label>
            <input type="checkbox" name="home"/>
        </div>
        <button type="submit" class="crud-btn"><span class="icon-new"></span> Thêm tin</button>
    </form>
    <hr/>
    <!-- Danh sách tin tức -->
    <table class="crud-table">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Tiêu đề</th>
                <th>Ảnh</th>
