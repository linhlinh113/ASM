                <th>Tác giả</th>
                <th>Lượt xem</th>
                <th>Loại tin</th>
                <th>Trang nhất</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <c:forEach var="news" items="${newsList}">
