<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html>
<html>
<head>
    <title>Quản lý Newsletter | Admin | ABCNews</title>
    <meta charset="UTF-8"/>
    <link rel="stylesheet" href="../assets/css/style.css"/>
    <link rel="icon" type="image/png" href="../assets/img/newsicon.png"/>
</head>
<body>
<jsp:include page="../layout/header.jsp"/>
<div class="container">
    <h2 class="main-title"><span class="icon-mail"></span> Quản lý Newsletter - Email nhận bản tin</h2>
    <c:if test="${not empty error}">
        <div class="alert error">${error}</div>
    </c:if>
    <!-- Form thêm/sửa newsletter -->
    <form action="AdminNewsletterServlet" method="post" class="crud-form">
        <input type="hidden" name="action" value="add"/>
        <div class="form-group">
            <label>Email:</label>
            <input type="email" name="email" required/>
        </div>
        <div class="form-group">
            <label>Trạng thái:</label>
            <input type="checkbox" name="enabled" checked/> Còn hiệu lực
        </div>
        <button type="submit" class="crud-btn"><span class="icon-mail"></span> Thêm email</button>
    </form>
    <hr/>
    <!-- Danh sách Newsletter -->
    <table class="crud-table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <c:forEach var="nl" items="${newsletterList}">
                <tr>
                    <td>${nl.email}</td>
                    <td>
                        <c:if test="${nl.enabled}"><span style="color:green;">✔ Còn hiệu lực</span></c:if>
                        <c:if test="${not nl.enabled}"><span style="color:gray;">✘ Hết hiệu lực</span></c:if>
                    </td>
                    <td>
                        <!-- Sửa -->
                        <form action="AdminNewsletterServlet" method="post" style="display:inline;">
                            <input type="hidden" name="action" value="edit"/>
                            <input type="hidden" name="email" value="${nl.email}"/>
                            <input type="checkbox" name="enabled" <c:if test="${nl.enabled}">checked</c:if>/> Hiệu lực
                            <button type="submit" class="crud-btn">Sửa</button>
                        </form>
                        <!-- Xóa -->
                        <form action="AdminNewsletterServlet" method="post" style="display:inline;">
                            <input type="hidden" name="action" value="delete"/>
                            <input type="hidden" name="email" value="${nl.email}"/>
                            <button type="submit" class="crud-btn" onclick="return confirm('Xác nhận xóa email này?');">Xóa</button>
                        </form>
                    </td>
                </tr>
            </c:forEach>
        </tbody>
    </table>
</div>
<jsp:include page="../layout/footer.jsp"/>
</body>
